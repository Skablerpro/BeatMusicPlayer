<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/albumDetailFrag"
    android:background="@color/primaryBackground"
    tools:context=".fragments.DetailsFragment">



    <RelativeLayout
        android:id="@+id/album_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/album_cover"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher_background"
            app:riv_corner_radius="7dp" />

        <TextView
            android:id="@+id/album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/album_cover"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingEnd="50dp"
            android:paddingStart="50dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Album Name"
            android:textColor="@color/colorMidBlue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/album_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/album_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="Artist Name"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/album_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/album_artist"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:alpha="0.7"
            android:text="Year | Duration"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/album_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/album_info"
        android:layout_alignParentEnd="true"
        android:background="@color/primaryBackground"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>